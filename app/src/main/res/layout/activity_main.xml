<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_margin="10dp" android:orientation="vertical">

    <TextView android:layout_width="match_parent"
              android:labelFor="@id/message"
              android:text="Annoying Message"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:layout_height="wrap_content"/>

    <EditText android:layout_width="match_parent"
              android:id="@+id/message"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:labelFor="@id/phoneNumber"
              android:text="Phone Number"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:layout_height="wrap_content"/>

    <EditText android:layout_width="match_parent"
              android:id="@+id/phoneNumber"
              android:inputType="phone"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:labelFor="@id/timeInterval"
              android:text="Time Interval"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:layout_height="wrap_content"/>

    <EditText android:layout_width="match_parent"
              android:id="@+id/timeInterval"
              android:digits="123456789"
              android:inputType="number"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/startBtn"
            android:text="Start"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

</LinearLayout>